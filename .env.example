PORT=3000
MONGODB_URI=mongodb+srv://user:password@cluster/dbname
JWT_SECRET=change-me

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Shotgun API
SHOTGUN_ORGANIZER_ID=
SHOTGUN_API_TOKEN=

# CORS Configuration
# Format: "https://mercilille.com,https://app.railway.app,http://localhost:5173"
# Séparer les origines par des virgules, sans espaces autour des URLs
# En production, seules les origines HTTPS sont autorisées (sauf localhost)
CORS_ORIGINS=https://mercilille.com,http://localhost:5173

# Logging
LOG_LEVEL=info

# Environment
NODE_ENV=development
